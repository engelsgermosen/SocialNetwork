@{
    var guardarData = ViewBag.Guardar as SavePostViewModel;
    var secund = ViewBag.Hola;
    var miViewData = new ViewDataDictionary(ViewData)
            {
                ["Brega"] = "Valor adicional"
            };

}
@using SocialNetwork.Core.Application.ViewModel.Post;
@model List<PostViewModel>;

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-3 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h4 class="text-center text-light">Crear publicacion</h4>
                </div>
                <div class="card-body d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal1">
                        <i class="fas fa-file-alt"></i>
                    </button>

                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modal2">
                        <i class="fas fa-image"></i>
                    </button>

                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal3">
                        <i class="fas fa-video"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modalLabel1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel1">Formulario 1</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        @Html.Partial("_Formulario", guardarData)
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modalLabel2" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel2">Formulario 2</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        @Html.Partial("_Formulario2", guardarData)
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modal3" tabindex="-1" aria-labelledby="modalLabel3" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel3">Formulario 3</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        @Html.Partial("_Formulario3", guardarData)
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-md-6 mx-auto mt-5">

            @if(Model.Count > 0 || Model != null)
            {
                @foreach(var post in Model)
                {
                    <div class="card mb-3">
                        <div class="card-header">

                            <div class="d-flex align-items-center">
                                <img src="@post?.UserImagePath" class="rounded-circle me-5" width="50" height="50"/>
                                <span class="fw-bold fs-5">@post?.Username</span>
                            </div>
                        </div>
                        <div class="card-body">
                            @if(!string.IsNullOrWhiteSpace(post?.ImagePath))
                            {
                                <img class="img-fluid" width="250" src="@post.ImagePath" alt="@post.Content"/>
                            }
                            @if(!string.IsNullOrWhiteSpace(post?.VideoUrl))
                            {
                                <iframe width="560" height="315" src=@($"https://www.youtube.com/embed/{post.VideoUrl}") title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                            }
                            @if(!string.IsNullOrWhiteSpace(post?.Content))
                            {
                                <p>@post.Content</p>
                            }

                            @if(post?.Comments != null)
                            {
                                <div class="bg-light p-3">
                                    <label class="form-label">Comentarios...</label>

                                    @foreach(var commets in post.Comments)
                                    {
                                        @if(commets.ParentCommentId == null)
                                        {

                                            <div class=" d-flex bg-white gap-3 mb-2">
                                                <div class="">
                                                    <img class="rounded-circle" width="60" height="60" src="@commets.ImagePath"/>
                                                </div>
                                                <div>
                                                    <p>@commets.Message</p>
                                                    <div>
                                                        @if ((DateTime.Now - commets.Created).TotalHours <= 24)
                                                        {
                                                            <span>@Convert.ToInt32((DateTime.Now - commets.Created).TotalHours) h</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@Convert.ToInt32((DateTime.Now - commets.Created).TotalDays) d</span>
                                                        }

                                                    </div>


                                                    <button type="button" class="text-primary" data-bs-toggle="modal" data-bs-target="#modalComments">responder</button>
                                                    <button>
                                                        <i class="fas fa-comments"></i>
                                                    </button>

                                                    <div class="modal fade" id="modalComments" tabindex="-1" aria-labelledby="modalLabel2" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">

                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="modalLabel2">Comentario</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                                                </div>

                                                                <div class="modal-body">
                                                                    <form asp-action="CreateComments" asp-controller="Home" method="post">
                                                                        <div class="mb-3">
                                                                            <label for="CommentText" class="form-label">Comentario: </label>
                                                                            <input required type="text" class="form-control" id="CommentText" name="CommentText" />
                                                                            <input value="@commets.PostId" type="hidden" id="PostId" name="PostId" />
                                                                            <input value="@commets.Id" type="hidden" id="ParentCommentId" name="ParentCommentId" />
                                                                        </div>

                                                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                                                    </form>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>


                                                </div>

                                            </div>

                                            @foreach(var x in commets?.ParentComment)
                                            {
                                                <div class=" d-flex bg-white gap-3 mb-2 hijos">
                                                    <div class="">
                                                        <img class="rounded-circle" width="60" height="60" src="@x.ImagePath" />
                                                    </div>
                                                    <div>

                                                        <p>@x.Message</p>
                                                        
                                                        @if ((DateTime.Now - x.Created).TotalMinutes < 60)
                                                        {
                                                            <span>@Convert.ToInt32((DateTime.Now - x.Created).TotalMinutes) m</span>

                                                        }
                                                        else if ((DateTime.Now - x.Created).TotalHours <= 24)
                                                        {
                                                            <span>@Convert.ToInt32((DateTime.Now - x.Created).TotalHours) h</span>
                                                        }
                                                         else 
                                                         {
                                                            <span>@Convert.ToInt32((DateTime.Now - x.Created).TotalDays) d</span>
                                                        } 

                                                    </div>

                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            }

            
        </div>
    </div>
</div>


<style>
    .hijos{
        margin-left:5rem;
    }
</style>
