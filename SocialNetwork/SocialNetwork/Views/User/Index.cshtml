@{
    ViewData["Title"] = "Login";

}
@using SocialNetwork.Core.Application.ViewModel.User;
@model LoginViewModel;


<div class="container-fluid d-flex flex-column flex-grow-1">
    @if(!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="row">
            <div class="col-12 col-md-6 mx-auto alert mt-4 text-dark @ViewBag.MessageType" role="alert">
                @ViewBag.Message
            </div>
        </div>
    }
    <div class="row d-flex justify-content-center flex-grow-1 align-items-center">
        <div class="col-12 col-md-6 col-lg-4 mx-auto mb-5">
            <h2 class="text-center">LOGIN</h2>
            @Html.ValidationSummary(false,"",new {@class="text-danger"})
            <form class="" asp-action="Index" asp-controller="User" method="post">
                <div class="mb-2">
                    <label asp-for="Username" class="form-label">Usuario:</label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="Password" class="form-label">Contraseña:</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <button type="submit" class=" mt-3 w-100 btn btn-outline-primary">Ingregar</button>
            </form>
        </div>
    </div>
</div>